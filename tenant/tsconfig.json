{
  "compilerOptions": {
    "target": "es2017",                                  
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@db/*": ["./db/*"],
      "@type/*": ["./types/*"]
    }                                
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
